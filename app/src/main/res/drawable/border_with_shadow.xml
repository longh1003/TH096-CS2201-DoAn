<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Màu đen mờ cho bóng -->
            <corners android:radius="16dp" /> <!-- Bo góc cho bóng -->
        </shape>
    </item>

    <!-- Nền và viền -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Màu nền -->
            <stroke android:width="2dp" android:color="@color/primary" /> <!-- Viền màu nhấn -->
            <corners android:radius="16dp" /> <!-- Bo góc cho viền -->
        </shape>
    </item>
</layer-list>
